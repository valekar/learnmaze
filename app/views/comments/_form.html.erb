<%= form_for [@commentable,@comment] do |f| %>
    <% if @comment.errors.any? %>
        <div class="error_messages">
          <h3> Please Correct the following errors</h3>

          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>


          </ul>
        </div>
    <% end %>

    <div class="fields">
      <%= f.text_area :content,rows:1,columns:10  %>
    </div>

    <div class="action">
      <%= f.submit %>
    </div>

<% end %>